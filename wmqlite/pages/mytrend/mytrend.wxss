page, .page {background-color:#ffffff; font-size:30rpx; font-weight:400}
.page-item{ padding:40rpx 30rpx; clear: both; overflow:hidden; border-bottom: solid 1px #e5e5e5}
.page-item .page-face{width:19%;float:left;}
.page-item .page-face image{width:100rpx; height:100rpx;}
.page-item .page-warp{width:81%;float:right;}
.post-image{width:200rpx; height:200rpx; margin-right:10px; float:left;}
.post-remark{float:left; width:330rpx;}
.page-title{font-weight: bold; color:#406298;font-size:32rpx;}
.page-data{line-height:130%; margin-bottom: 10px;}
.page-image{clear: both; overflow:hidden; margin-bottom:5px;}
.page-image image[mode="widthFix"]{max-width:60%;}
.page-image image[mode="aspectFill"]{width:170rpx; height: 170rpx; float: left; margin:0px 5px 5px 0;}
.page-address{font-size:26rpx; color:#406298;}
.page-time{font-size:26rpx; color:#999;}
.page-time b{margin-left:10px; color:#406298}
.comment-btn{width:50rpx; height:32rpx; float: right}
.page-comment{background-color:#f1f1f1; padding:8rpx 0; font-size:30rpx; margin-top:30rpx;}
.page-comment>navigator,.page-comment>view{padding:1px 10px; line-height:45rpx; font-weight:normal}
.page-comment>navigator b,.page-comment>view b{font-weight: 600;color:#406298;}
.page-comment>.praise{padding:5rpx 20rpx; background:url(https://m.wmq1688.com/mobile/lite/images/icons/praise-hui.png) 10px 3px no-repeat; background-size:16px; text-indent:20px;}
.page-comment>.line{border-bottom: solid 1px #e5e5e5; height:1px; overflow: hidden; margin-bottom:5px; clear: both}
.commentview{border-radius:5px;  background-color:#444; font-size:14px; width:0px; height:34px; overflow: hidden; position:absolute; z-index:9; right: 95rpx;}
.commentview>view{width:49%; text-align:center; margin:6px 0; background-color:#444; color:#fff; float:left; text-indent:20px; background:url(https://m.wmq1688.com/mobile/lite/images/icons/comment-icon.png) 16px 3px no-repeat; background-size:18px;}
.commentview>view:first-child{border-right:solid 1px #222;background:url(https://m.wmq1688.com/mobile/lite/images/icons/praise-icon.png) 18px 3px no-repeat; background-size:16px;}
.footer-comment{position:fixed;bottom:0px; left:0px; background-color:#f5f5f5; width: 100%; border-top: solid 1px #ddd;}
.footer-comment input{background-color: #fff; border:solid 1px #e5e5e5; padding:3px 10px; border-radius: 4px; line-height:30px; margin:8px 15px;}
.data-loading{text-align: center;  background-color:#ffffff; color: #666; padding:15px 0 10px 0;}
.data-loading image{width:30px; height:30px; float: left}
.data-loading view{display:inline-block;}
.data-loading span{float:left; padding-top: 5px; display: inline-block}