/**index.wxss**/
.page-card-bg{background-color:#ff894c; overflow: hidden}
.page-card{margin:30rpx 30rpx 40rpx; padding:24rpx 30rpx; background-color:#fff; overflow:hidden; position: relative}
.page-card>view{line-height:68rpx; font-size:32rpx; color:#333; clear: both}
.page-card>view span{float:left; width:94rpx;}
.page-card>view b{color:#000;}
.page-card>view.card-title{font-size:50rpx; height:150rpx; font-weight: bold; color:#000; width:80%}
.page-card>view.card-title b{font-size:32rpx; font-weight: normal; margin-left: 10px;}
.page-card>view b.card-tel{font-size:48rpx; color:#ff894c; display: inline-block;}
.page-card image{width:120rpx; height:120rpx; overflow: hidden; position: absolute; top:40rpx; right:35rpx;}
.page-info{margin-top:40rpx;  background-color:#fff; overflow:hidden; padding:5px 15px; border-top:solid 1px #e5e5e5; border-bottom:solid 1px #e5e5e5; font-size:40rpx;}
.weui-flex__item{ color:#888; font-size:32rpx; padding-top:10rpx;}
.page-hd{margin-top:20rpx}
.page-moreinfo>view{line-height:70rpx; font-size:32rpx; color:#333; clear: both}
.page-moreinfo>view span{float:left; width:150rpx;}
.page-moreinfo>view b{color:#000;}
.weui-grids > .weui-grid {padding:0px; position: initial}
.weui-cell {padding:10px 0px;}
.weui-cell__bd {height:120rpx; overflow: hidden}
.weui-cell__bd image{width:112rpx; height:112rpx; margin-right:10rpx;}
.weui-cell::before{border-top-width:0px}
.weui-grid__label{font-size:32rpx}
.weui-grid__icon{width:54rpx; height:54rpx;}
.page-share{text-align: center; font-size:30rpx; color:#999999; overflow: hidden; clear: both}
.page-share .share-view{color:#333; font-size:34rpx; height:90rpx; padding-top:4px; margin-top:10px; margin-bottom: 60px;}
.page-share .share-view view{display: inline-block;}
.page-share .share-view image{width:24px; height: 24px; float: left; margin-top:5px;}
.page-share .share-view span{float: left; margin-left:10px;}
.share-icon{position: absolute; background:#ffffff url(https://lite.wmq1688.com/lite/images/icons/share-icon.png) 0 0 no-repeat; background-size:50rpx 50rpx; margin:0px; bottom:30rpx; right:30rpx; width:50rpx; height:50rpx; z-index: 5}
.save-icon{position: absolute; background:#ffffff url(https://lite.wmq1688.com/lite/images/icons/save-icon.png) 0 0 no-repeat; background-size:50rpx 50rpx; margin:0px; bottom:30rpx; right:104rpx; width:50rpx; height:50rpx; z-index: 5}
button.save-icon::after,button.share-icon::after{ border-width:0px;}
.mallImg{
    display: flex;
    font-size: 30rpx;
    color: #7a7a7a;
    align-items: center;
    height: 154rpx;
    padding: 0 30rpx;
    background: #fff;
    border-bottom: 1px solid #d9d9d9;
}
.mallImgList{
    width: 128rpx;
    height: 128rpx;
    margin-right: 10rpx;
}
.mallImg text{
    margin-right: 49rpx;
}